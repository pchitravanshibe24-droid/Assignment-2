

#include <iostream>
using namespace std;

class LowerTriangular {
    int *A, n;
public:
    LowerTriangular(int n) {
        this->n = n;
        A = new int[n * (n + 1) / 2];
    }

    void set(int i, int j, int val) {
        if (i >= j)
            A[i * (i - 1) / 2 + (j - 1)] = val;
    }

    int get(int i, int j) {
        if (i >= j)
            return A[i * (i - 1) / 2 + (j - 1)];
        else
            return 0;
    }

    void display() {
        cout << "\nLower Triangular Matrix:\n";
        for (int i = 1; i <= n; i++) {
            for (int j = 1; j <= n; j++)
                cout << get(i, j) << " ";
            cout << endl;
        }
    }
};

int main() {
    int n;
    cout << "Enter size of matrix: ";
    cin >> n;

    LowerTriangular l(n);
    cout << "Enter elements row-wise:\n";
    for (int i = 1; i <= n; i++)
        for (int j = 1; j <= n; j++) {
            int x;
            cin >> x;
            l.set(i, j, x);
        }

    l.display();
    return 0;
}
